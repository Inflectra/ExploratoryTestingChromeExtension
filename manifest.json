{
  "manifest_version": 2,
  "name": "Exploratory Testing Chrome Extension",
  "description": "Exploratory testing session using Chrome",
  "version": "1.0",
  "background": {
    "scripts": [
      "popup.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "js": [
        "popup.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}